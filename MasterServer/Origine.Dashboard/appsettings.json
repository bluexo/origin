{
  "DashboardOptions": {
    "Host": "127.0.0.1",
    "HideTrace": true,
    "HostSelf": true,
    "Port": 8524
  },
  "LogStorageOptions": {
    "DatabaseName": "Origine_Log",
    "CollectionPrefix": "Log_"
  },
  "MongoDBMembershipTableOptions": {
    "DatabaseName": "Origine_System",
    "CollectionPrefix": "Members_"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "Logs/${level}/${date:format=yyyy-MM-dd HH}.log",
        "layout": "${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|${callsite}"
      },
      "logconsole": {
        "type": "ColoredConsole",
        "useDefaultRowHighlightingRules": true,
        "layout": "${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|${callsite}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  },
  "NLogNoSqlTargetOptions": {
    "Name": "Mongo",
    "CollectionName": "Host",
    "Rules": [
      {
        "Logger": "*",
        "MinLevel": "Warn",
        "MaxLevel": "Fatal"
      }
    ]
  }
}
